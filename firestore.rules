
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to blog posts and page content
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow anyone to submit a quote (create)
    // Only authenticated users (admins) can view, update, or delete quotes
    match /quotes/{quoteId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}
