
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Posts Collection
    // This collection stores all blog articles.
    match /posts/{postId} {
      // Anyone can read a single post or a list of posts.
      // This is necessary for the public blog pages to work.
      allow read, list: if true;

      // Only authenticated users (admins) can create, update, or delete posts.
      allow write: if request.auth != null;
    }

    // Pages Collection
    // This collection stores content for specific pages, like the homepage images.
    match /pages/{pageId} {
      // Anyone can read the content of pages.
      // This is necessary for the homepage to display hero images, etc.
      allow read, list: if true;

      // Only authenticated users (admins) can modify page content.
      allow write: if request.auth != null;
    }

    // Quotes Collection
    // This collection stores quote requests from customers.
    match /quotes/{quoteId} {
      // Anyone can submit a new quote request.
      allow create: if true;

      // Only authenticated users (admins) can view, list, update, or delete quotes.
      // This protects customer data.
      allow read, list, update, delete: if request.auth != null;
    }
  }
}
