rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for blog posts and page content,
    // but restrict write access to authenticated admins.
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow anyone to create a quote (submit the form),
    // but only authenticated admins can read, update, or delete them.
    match /quotes/{quoteId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}
