
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all collections.
    // This is useful for public-facing content like blogs, products, etc.
    match /{document=**} {
      allow read: if true;
    }

    // Restrict write access. Only authenticated users can write data.
    // You can further restrict this to specific users or roles.
    // e.g., allow write: if request.auth.uid == "YOUR_ADMIN_UID";
    match /posts/{postId} {
        allow write: if request.auth != null;
    }
    match /quotes/{quoteId} {
        allow write: if true; // Allow anyone to submit a quote
    }
    match /pages/{pageId} {
        allow write: if request.auth != null;
    }
  }
}
